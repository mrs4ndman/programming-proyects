Proceso perimetro_rectangulo
	Definir altura, base, perimetro, area como Real;
	Escribir "Dime la longitud de la altura del rectángulo";
	Leer altura;
	Escribir "Dime la longitud de la base del rectángulo";
	Leer base;
	perimetro = (base*2) + (altura*2);
	area = base*altura;
	Escribir "El perímetro vale ", perimetro;
	Escribir "El área vale ", area;
FinProceso
